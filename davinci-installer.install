post_install()
{
	sudo cp -rf /usr/share/linexin/packages/usr/* /usr
    if ! grep -qE "(libc\+\+|libc\+\+abi)" /etc/pacman.conf; then
        sudo sed -i '/^#*IgnorePkg\s*=/ s/$/ libc++ libc++abi/' /etc/pacman.conf
        echo "â†’ Added libc++ libc++abi to IgnorePkg"
    fi
}

post_upgrade()
{
    post_install
}
